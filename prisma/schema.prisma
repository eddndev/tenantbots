generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Session {
  id          String   @id @default(uuid())
  phoneNumber String?  @unique
  name        String
  status      String   @default("DISCONNECTED") // CONNECTED, QR, DISCONNECTED
  config      Json?    // Stores delays, webhook URLs, etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
