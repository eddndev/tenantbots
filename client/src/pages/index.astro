---
import Layout from "../layouts/Layout.astro";
import { BotCard } from "../components/BotCard";
import "../styles/global.css";

// In a real app, we'd fetch the list of bots from the server server-side
// But since we need the API Key (client-side secret), we'll simulate one bot for now
// or ask the user for the key.
---

<Layout title="TenantBots Dashboard">
	<main className="min-h-screen bg-bg-surface p-8">
		<header
			className="max-w-5xl mx-auto mb-12 flex justify-between items-center"
		>
			<div>
				<h1
					className="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary to-purple-400"
				>
					TenantBots
				</h1>
				<p className="text-slate-500 mt-1">
					Gesti√≥n de sesiones de WhatsApp
				</p>
			</div>
			<div className="text-sm text-slate-400">v1.0.0</div>
		</header>

		<section className="max-w-5xl mx-auto">
			<div
				className="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 mb-8"
			>
				<h2 className="text-lg font-semibold mb-4 text-slate-800">
					Panel de Control
				</h2>
				<div
					className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
				>
					{
						/* For Demo, we hardcode the API Key injection via a client wrapper. 
                        In production, you'd have a login page. */
					}
					<BotCard
						client:load
						id="bot-1"
						name="Bot Principal"
						initialStatus="DISCONNECTED"
						apiKey="Q[2cHLQCJJR(sFsx.@h+2Rg8cK/z2!c.J9lMK(*J"
					/>
				</div>
			</div>
		</section>
	</main>
</Layout>
